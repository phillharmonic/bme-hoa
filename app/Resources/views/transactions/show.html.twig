{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}<link href="{{ asset('bundles/main/css/content.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}
{% block title %}Transaction Show{% endblock %}
{% block sidebar %}
    {{ include('sidebars/admin.html.twig') }}
{% endblock %}

{% block body %}    
  
    <div class="section-header"><h1>Transaction</h1><ul class="page-nav"><li><a href=''>Edit</a></li></ul></div>
    <div class="section-header"><h6>Show</h6></div>
    <div class="section-header"><h2>Transaction Number: {{ transaction.transactionNumber }}</h2></div>
    <div class='form'>
            <div class='section'>
                <div class="section-header">
                    {#
                    <h2>{{ account.balance|title }} {{ user.lastname|title }}</h2>
                    <ul class="page-nav">
                        <li><a href='{{ path('MainBundle_Account_Edit', {'id' : user.id}) }}'>Edit</a></li>
                    </ul>
                </div>
                #}
                <div class='wrapper'>
                    <div id='left'><section><div id='one'>Timestamp</div><div id='two'> {{ transaction.createdAt|date }}</div></section></div>
                    <div id='left'><section><div id='one'>Type</div><div id='two'> {{ transaction.type }}</div></section></div>
                    <div id='left'><section><div id='one'>Description</div><div id='two'> {{ transaction.description }}</div></section></div>
                    <div id='left'><section><div id='one'>Note</div><div id='two'> {{ transaction.note }}</div></section></div>
                    <div id='left'><section><div id='one'>Amount</div><div id='two'> ${{ transaction.amount|number_format(2, '.', ',') }}</div></section></div>
                    {# for transaction in account.users %}
                        <div id='left'><section><div id='one'>Homeowner {{loop.index}}</div><div id='two'> {{ user.fullname }}</div></section></div>
                    {% endfor #}
                    {# <div id='left'><section><div id='one'>Property</div><div id='two'> {{ account.property.0.houseNumber }} {{ account.property.0.street }}</div></section></div> #}
                </div>
            </div>
    </div>
{% endblock %}