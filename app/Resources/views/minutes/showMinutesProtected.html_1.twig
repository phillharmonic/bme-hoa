    </style>
{% endblock %}
{% block javascripts %}{{parent()}}
    <script>
        $(document).ready(function(){
                $('.as-form').on('click',function(){
                var $form = $('<form/>').hide();

                //form options
                $form.attr({
                    'action' : $(this).attr('href'),
                    'method':'post'
                })

                //adding the _method hidden field
                $form.append($('<input/>',{
                    type:'hidden',
                    name:'_method'
                }).val($(this).data('method')));



                //add form to parent node
                $(this).parent().append($form);

                $form.submit();

                return false;
            });
        });
    </script>
{% endblock %}
