{% extends 'AdminLTE.html.twig' %}
{% block title %}Minutes Index - Admin{% endblock %}
{% block javascripts %}{{parent()}}
    <!-- page script -->
    <script>
        $(document).ready(function() {
                $('#minutes-index').DataTable({
                  "paging": false,
                  "lengthChange": false,
                  "searching": false,
                  "ordering": true,
                  "info": false,
                  "autoWidth": false,
                  "order": [[ 0, "desc" ]]
                });
              } );
    </script> 
{% endblock %}
{% block pageheader %}<h1><span class="glyphicon glyphicon-file">&nbsp;</span>Admin | <small><small>MINUTES INDEX</small></small></h1><p>Brandy Mill Estates Homeowners Association</p>{% endblock %}
{% block content %}
    
    <div class="content-wrapper"><!-- content wrapper; contains page content -->

        <section class="content-header"><!-- content header -->
          <h1><!-- heading -->
            Minutes
            <small></small>
          </h1><!--/heading -->
          <ol class="breadcrumb"><!--breadcrumb -->
            <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Admin</a></li>
            <li class="breadcrumb-item">Board</li>
            <li class="breadcrumb-item active">Minutes</li>
          </ol><!--/breadcrumb -->
        </section><!--/content header -->

        <section class="content"><!-- main content -->

            <div class="row"><!-- Row of columns-->
          
                <div class="col-md-6"><!-- /.col (left) CREATE NEW-->

                     <!-- Form content-->
                    {% form_theme form 'form/AdminLTE_layout.html.twig' %}
                    <div class="box box-default  collapsed-box"><!-- Horizontal Form -->
                        <div class="box-header with-border">
                            <h3 class="box-title">Create New</h3>
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                                <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                            </div>
                        </div><!-- box header End -->
                        {{ form_start(form) }}<!-- Form Start -->
                        <div class="box-body"><!-- box body start -->
                            {{ form_widget(form) }}
                        </div><!--/box body end -->
                        {{ form_end(form) }}<!--/Form End -->
                    </div><!-- /Form content -->
                    
                </div><!-- /.col (left) CREATE NEW-->
        
                <div class="col-md-6"><!-- /col (right) DOCUMENTATION-->
                    
                    <div class="box box-default collapsed-box">
                        <div class="box-header with-border">
                          <h3 class="box-title">Documentation</h3>
                          <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                                <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                          </div>
                        </div>
                        <div class="box-body">
                            
                            
                            <div class="small-box bg-aqua"><!-- small box -->
                              <div class="inner">
                                <h3>HOW TO:</h3>
                                <h4>How to publish and embed a Google document:</h4>
                                <ol>
                                    <li>Create a Google Document.  </li>
                                    <li>Share the document using the share button in the top right corner.  Make it Public and Editable for anyone with a link.</li>
                                    <li>Publish the document by going to File->Publish To Web  </li>
                                    <li>You will have two options: a LINK and EMBED code.  Copy the LINK code. </li>
                                    <li>Paste the LINK code into the PATH field here in these forms.</li>
                                </ol>
                              </div>
                              <div class="icon">
                                <i class="glyphicon glyphicon-info-sign"></i>
                              </div>
                              <a href="https://support.google.com/docs/answer/37579?hl=en" class="small-box-footer" target="_blank">
                                More info <i class="glyphicon glyphicon-info-sign"></i>
                              </a>
                            </div><!-- small box -->
                            
                            
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                    
                </div><!-- /.col (right) DOCUMENTATION-->
        
            </div><!-- /.row of columns-->
            
            
            <div class="row"><!-- INDEX MINUTES -->
                <div class="col-xs-12">
                    <div class="box box-default">
                        <div class="box-header with-border">
                            <h3 class="box-title">Index <small></small></h3>
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                                <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                            </div>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                          <table id="minutes-index" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                              <th>ID</th>
                              <th>Created By</th>
                              <th>Path</th>
                            </tr>
                            </thead>
                            <tbody>
                                {% for minute in minutes %}
                                    <tr>
                                        <td><a href="{{ path('showMinutesAdmin', {'id' : minute.id } ) }}"> {{minute.year}} Quarter-{{minute.quarter}}  </a></td>
                                        <td>{{minute.user.fullname}} on {{minute.created|date('M j. Y g:s a')}}</td>
                                        <td><a href="{{minute.embedCode}}" target="_blank"> Link to public minutes </a></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                          </table>
                        </div><!-- /.box-body -->
                        <div class="box-footer with-border">
                            <div class="row"><!-- Row of columns-->
                                 <div class="col-md-6 footer-pageinfo"><!-- /.col (left) page info-->
                                    <span class="">Showing {{minutes.currentPageNumber}} to {{minutes.getPageCount }} of {{ minutes.getTotalItemCount }} entries</span>
                                 </div><!-- /.col (left) page info-->
                                 <div class="col-md-6"><!-- /.col (right) paginator-->
                                    <span class="pull-right">
                                        <div class="navigation">{{ knp_pagination_render(minutes) }}</div>
                                    </span>
                                 </div><!-- /.col (right) paginator-->
                            </div>
                        </div>
                    </div><!-- /.box -->
                </div><!-- /.col.xs -->
            </div><!--/ INDEX AGENDAS -->
      
            
            
            
            <div class="box box-default"><!-- MOST CURRENT AGENDA -->
                <div class="box-header with-border">
                    <h3 class="box-title">Current <small></small></h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                    </div>
                </div><!-- /.box-header -->
                <div class="box-body"><!--.box-body start -->
                    <iframe 
                        width="100%"
                        height="500"
                        frameborder="0" style="border:0; margin-bottom: 50px;"
                        src="{{latestMinutes.embedCode|raw}}"
                        allowfullscreen
                    >
                    </iframe>
                </div><!-- /.box-body end-->
                <div class="box-footer">
                  Google Doc
                </div>
            </div><!--/ MOST CURRENT AGENDA -->

        </section><!--/main content -->
        
    </div><!--/content wrapper; contains page content -->
    
{% endblock %}