                to: {{comps.avgState}},
                prefix: "$",
                from_fixed: true,
                to_fixed: true
            });        
            $("#avgCounty").ionRangeSlider({
                type: "double",
                grid: false,
                min: {{comps.minValue}},
                max: {{comps.maxValue}},
                from: 0,
                to: {{comps.avgCounty}},
                prefix: "$",
                from_fixed: true,
                to_fixed: true
            });        
            $("#avgTownship").ionRangeSlider({
                type: "double",
                grid: false,
                min: {{comps.minValue}},
                max: {{comps.maxValue}},
                from: 0,
                to: {{comps.avgTownship}},
                prefix: "$",
                from_fixed: true,
                to_fixed: true
            });       
            $("#avgNeighborhood").ionRangeSlider({
                type: "double",
                grid: false,
                min: {{comps.minValue}},
                max: {{comps.maxValue}},
                from: 0,
                to: {{comps.avgNeighborhood}},
                prefix: "$",
                from_fixed: true,
                to_fixed: true
            });       
        });
