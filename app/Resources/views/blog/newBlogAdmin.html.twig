{% extends 'AdminLTE.html.twig' %}
{% block title %}New Announcement{% endblock %}
{% block pageheader %}<h1><span class="glyphicon glyphicon-file">&nbsp;</span>Admin | <small><small>ANNOUNCEMENTS</small></small></h1><p>Brandy Mill Estates Homeowners Association</p>{% endblock %}
{% block content %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            Announcements
            <small>NEW</small>
          </h1>
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Admin</a></li>
            <li class="breadcrumb-item active">Announcements</li>
          </ol>
        </section>

        <!-- Main content -->
        <section class="content">

            {% form_theme form 'form/bootstrap_3_layout.html.twig' %}
            <div class="col-md-6">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}    
            </div>
            <div class="col-md-6"></div>

        </section>
    </div>
{% endblock %}