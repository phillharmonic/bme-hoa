    </h5>
    <hr>
    {# PAGE CONTENTS #}     
    
    {% form_theme form 'form/bootstrap_3_layout.html.twig' %}
    <div class="col-md-6">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}   </br></br> 
    </div>
    <div class="col-md-6"></div>
    
{% endblock %}