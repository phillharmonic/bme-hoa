{% extends 'alt-layout-no-sidebar.html.twig' %}
{% block title %}Edit Annoucement {{blog.id}}{% endblock %}
{% block pageheader %}<h1><span class="glyphicon glyphicon-pencil">&nbsp;</span>Edit | <small><small>THE DETAILS OF THE ANNOUNCEMENT</small></small></h1><p>Brandy Mill Estates Homeowners Association</p>{% endblock %}
{% block content %}
    {# BREADCRUMB #}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><span class="glyphicon glyphicon-home"></span>&nbsp; <a href="{{ path('home') }}">Homepage</a></li>
        <li class="breadcrumb-item"><a href="{{ path('showBlogPublic', {'id' : blog.id } ) }}">Annoucement {{blog.id}}</a></li>
        <li class="breadcrumb-item active">Edit</li>
    </ol>
    {# PAGE SUMMARY #}        
    <h3><small>EDIT</small></h3>
