                                            <div class="col-md-3">
                                                <img class="profile-image" src="{{pet.photos.0.path}}" />
                                            </div>
                                            <div class="col-md-9">
                                                <p>Pet {{loop.index}}: {{pet.name}} </p>
                                                <p>Description: {{pet.gender}} {{pet.color}} {{pet.breed}} {{pet.type}}</p>
                                            </div>
                                        </div><!-- end: row -->
                                    </div>
