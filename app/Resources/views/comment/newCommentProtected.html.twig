{% extends 'alt-layout-no-sidebar.html.twig' %}
{% block javascripts %}{{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/main/js/add_delete.js') }}"></script>
{% endblock %}
{% block title %}New Comment{% endblock %}
{% block pageheader %}<h1><span class="glyphicon glyphicon-plus">&nbsp;</span>New Comment | <small><small>POST NEW COMMENT</small></small></h1><p>Brandy Mill Estates Homeowners Association</p>{% endblock %}
{% block content %}
    
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><span class="glyphicon glyphicon-home"></span>&nbsp; <a href="{{ path('home') }}">Homepage</a></li>
        <li class="breadcrumb-item"><a href="{{ path('showBlogPublic', {'id' : blog.id } ) }}">{{blog.title}}</a></li>
        <li class="breadcrumb-item active">New Comment</li>
    </ol>
    <h3><small>NEW</small></h3>
    <hr style="padding: 0; margin:0;">
    <h2>Comment &nbsp;&nbsp;<small><small>RE: {{blog.title|upper}}</small></small></h2>    
    <h5>
        <span class="glyphicon glyphicon-lock" style="padding-right: 5px;"></span><span style="padding-right: 5px;">Security Level</span><a href="#" data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-question-sign"></span></a>&nbsp;:&nbsp;&nbsp;
        <span style="">Protected</span><span class="glyphicon glyphicon-ok" style="padding:0 5px;"></span> 
    </h5>
    <hr>
    
{% form_theme form 'form/bootstrap_3_layout.html.twig' %}
<div class="col-md-6">
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }} </br></br>
</div>
<div class="col-md-6"></div>
{% endblock %}