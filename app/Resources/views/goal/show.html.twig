{% extends 'base.html.twig' %}

{% block body %}
    <h1>Goal</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ goal.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ goal.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ goal.description }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if goal.created %}{{ goal.created|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if goal.updated %}{{ goal.updated|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Completiongoaldate</th>
                <td>{% if goal.completionGoalDate %}{{ goal.completionGoalDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('goal_admin_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('goal_admin_edit', { 'id': goal.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
